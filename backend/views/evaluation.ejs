    </div>

    <script>
        const sections = [
            {
                title: "üß† I. Int√©r√™t de l‚Äôenseignant pour son cours",
                description: "L‚Äôenseignant(e)‚Ä¶",
                questions: [
                    "Cherche √† donner l‚Äôenvie d‚Äôapprendre",
                    "Fait preuve d‚Äôhumour",
                    "Utilise diff√©rents supports p√©dagogiques",
                    "Lit ses notes ou un document √©crit",
                    "Sugg√®re des implications pratiques",
                    "Donne son point de vue personnel",
                    "Fait preuve de conviction dans son cours",
                    "Montre de l‚Äôint√©r√™t et de l‚Äôenthousiasme"
                ]
            },
            {
                title: "üó£Ô∏è II. Clart√© du cours",
                description: "L‚Äôenseignant(e)‚Ä¶",
                questions: [
                    "Utilise un d√©bit de parole appropri√©",
                    "Parle d‚Äôune voix non monotone",
                    "S‚Äôexprime clairement",
                    "Avance dans son cours √† une vitesse mesur√©e"
                ]
            },
            {
                title: "ü§ù III. Relations avec les apprenants",
                description: "L‚Äôenseignant(e)‚Ä¶",
                questions: [
                    "Montre de l‚Äôint√©r√™t pour les apprenants",
                    "Accepte les points de vue divergents",
                    "Apporte de l‚Äôaide en cas d‚Äôincompr√©hension",
                    "Montre du respect envers les apprenants",
                    "Est d‚Äôun contact facile (est disponible)",
                    "Maintient la discipline dans la classe",
                    "Tol√®re les retards aux cours",
                    "Sanctionne les absences non justifi√©es au cours pr√©c√©dent"
                ]
            },
            {
                title: "üìö IV. Organisation du cours",
                description: "L‚Äôenseignant(e)‚Ä¶",
                questions: [
                    "Pr√©sente les objectifs du cours √† atteindre",
                    "Dispense le cours de mani√®re organis√©e",
                    "Donne des documents de travail",
                    "Fait des transitions logiques entre les comp√©tences √† acqu√©rir",
                    "Fait des synth√®ses utiles lors de son cours",
                    "Fait preuve de rigueur dans ses horaires de cours (d√©but et fin)"
                ]
            },
            {
                title: "üôã‚Äç‚ôÇÔ∏è V. Incitation √† la participation",
                description: "L‚Äôenseignant(e)‚Ä¶",
                questions: [
                    "Encourage les questions et les commentaires",
                    "Interroge individuellement les apprenants",
                    "Pose des questions √† la classe enti√®re",
                    "Incite les apprenants √† interagir",
                    "Pose des questions complexes",
                    "Cr√©e une ambiance √† la fois anim√©e et ordonn√©e",
                    "Maintient en √©veil l‚Äôattention des apprenants"
                ]
            },
            {
                title: "üí° VI. Explications",
                description: "L‚Äôenseignant(e)‚Ä¶",
                questions: [
                    "Utilise des explications",
                    "R√©p√®te ce qui est difficile",
                    "Souligne les points centraux",
                    "Donne des d√©tails",
                    "Identifie les points cl√©s",
                    "Donne des travaux de maison pour la compr√©hension du cours",
                    "Fait des corrections ponctuelles des devoirs/travaux rendus"
                ]
            },
            {
                title: "üë®‚Äçüéì VII. Attitude des apprenants (auto-perception)",
                description: "Les apprenants‚Ä¶",
                questions: [
                    "Sont attentifs et appliqu√©s",
                    "Participent activement aux cours",
                    "Respectent l‚Äôenseignant(e)",
                    "Sont motiv√©s par le cours"
                ]
            }
        ];

        const form = document.getElementById('evalForm');

        // G√©n√©rer les sections avec tableaux
        sections.forEach((section, sectionIndex) => {
            const sectionDiv = document.createElement('div');
            sectionDiv.className = 'section';
            sectionDiv.innerHTML = `<h2>${section.title}</h2>`;

            const table = document.createElement('table');
            const thead = document.createElement('thead');
            const tbody = document.createElement('tbody');

            thead.innerHTML = `
                <tr>
                    <th>Crit√®re</th>
                    <th>Toujours (20 pts)</th>
                    <th>Souvent (10 pts)</th>
                    <th>Rarement (5 pts)</th>
                    <th>Jamais (0 pt)</th>
                </tr>
            `;
            table.appendChild(thead);

            section.questions.forEach((question, questionIndex) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="criteria-cell">${question}</td>
                    <td><input type="radio" name="section${sectionIndex + 1}_q${questionIndex + 1}" value="20" required></td>
                    <td><input type="radio" name="section${sectionIndex + 1}_q${questionIndex + 1}" value="10"></td>
                    <td><input type="radio" name="section${sectionIndex + 1}_q${questionIndex + 1}" value="5"></td>
                    <td><input type="radio" name="section${sectionIndex + 1}_q${questionIndex + 1}" value="0"></td>
                `;
                tbody.appendChild(row);
            });

            table.appendChild(tbody);
            sectionDiv.appendChild(table);
            form.appendChild(sectionDiv);
        });

        // Ajouter la section commentaires
        const commentsSection = document.createElement('div');
        commentsSection.className = 'section';
        commentsSection.innerHTML = '<h2>‚úèÔ∏è VIII. Autres commentaires</h2><textarea name="commentaire" placeholder="Vos commentaires..."></textarea>';
        form.appendChild(commentsSection);

        // Ajouter la barre de progression
        const ratingBar = document.createElement('div');
        ratingBar.className = 'rating-bar';
        ratingBar.innerHTML = '<div class="rating-bar-fill" id="ratingBarFill"></div><span class="rating-text" id="ratingText">0.00</span>';
        form.appendChild(ratingBar);

        // Ajouter le bouton de soumission
        const submitButton = document.createElement('button');
        submitButton.type = 'submit';
        submitButton.className = 'submit-btn';
        submitButton.textContent = 'Soumettre l\'√©valuation';
        form.appendChild(submitButton);

        // Mettre √† jour la note en temps r√©el
        form.addEventListener('change', function(e) {
            if (e.target.type === 'radio') {
                updateRating();
            }
        });

        function updateRating() {
            const selected = form.querySelectorAll('input[type="radio"]:checked');
            if (selected.length === 0) {
                document.getElementById('ratingBarFill').style.width = '0%';
                document.getElementById('ratingText').textContent = '0.00';
                return;
            }
            let total = 0;
            selected.forEach(input => total += parseInt(input.value));
            const average = total / selected.length;
            const pourcentage = (average / 20) * 100;
            document.getElementById('ratingBarFill').style.width = `${pourcentage}%`;
            document.getElementById('ratingText').textContent = average.toFixed(2);
        }

        // Soumission du formulaire avec redirection
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            const formData = new FormData(e.target);
            const data = Object.fromEntries(formData);
            const messageDiv = document.createElement('div');
            messageDiv.id = 'message';
            form.appendChild(messageDiv);
            try {
                const response = await fetch('/evaluation', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                if (response.ok) {
                    messageDiv.className = 'success';
                    messageDiv.textContent = '√âvaluation soumise avec succ√®s !';
                    setTimeout(() => {
                        window.location.href = 'index.html';
                    }, 1500);
                } else {
                    messageDiv.className = 'error';
                    messageDiv.textContent = result.message || 'Erreur lors de l‚Äôenvoi.';
                }
            } catch (err) {
                messageDiv.className = 'error';
                messageDiv.textContent = 'Probl√®me de connexion au serveur.';
            }
        });
    </script>
